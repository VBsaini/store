{% comment %}
  Store Locator Snippet
  Usage: {% render 'store-locator-simple' %}
  
  This snippet provides a simple list of store locations using metafields
{% endcomment %}

{% assign store_locations = shop.metafields.store_locator.locations.value %}
{% assign total_stores = shop.metafields.store_locator.total_stores.value | default: 0 %}

{% if store_locations and store_locations.size > 0 %}
  <div class="store-locator-simple">
    <h3>Our Store Locations</h3>
    
    {% if total_stores > 0 %}
      <p class="store-count">We have {{ total_stores }} {% if total_stores == 1 %}store{% else %}stores{% endif %} to serve you:</p>
    {% endif %}

    <div class="stores-list">
      {% for store in store_locations %}
        <div class="store-item">
          <h4 class="store-name">{{ store.storeName }}</h4>
          <div class="store-address">
            <p>{{ store.address }}</p>
            <p>{{ store.city }}, {{ store.state }}, {{ store.country }}</p>
          </div>

          {% if store.coordinates %}
            <div class="store-actions">
              <a href="https://www.google.com/maps?q={{ store.coordinates.lat }},{{ store.coordinates.lng }}" 
                 target="_blank" 
                 class="map-link">
                üìç View on Map
              </a>
              <a href="https://www.google.com/maps/dir/?api=1&destination={{ store.coordinates.lat }},{{ store.coordinates.lng }}" 
                 target="_blank" 
                 class="directions-link">
                üß≠ Get Directions
              </a>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>

  <style>
    .store-locator-simple {
      margin: 20px 0;
      font-family: inherit;
    }
    
    .store-locator-simple h3 {
      margin-bottom: 15px;
      color: #333;
    }
    
    .store-count {
      margin-bottom: 20px;
      color: #666;
    }
    
    .stores-list {
      display: grid;
      gap: 20px;
    }
    
    .store-item {
      padding: 15px;
      border: 1px solid #e0e0e0;
      border-radius: 8px;
      background-color: #fafafa;
    }
    
    .store-name {
      margin: 0 0 10px 0;
      color: #2c5aa0;
      font-size: 1.1em;
    }
    
    .store-address {
      margin-bottom: 15px;
      color: #666;
    }
    
    .store-address p {
      margin: 0;
      line-height: 1.4;
    }
    
    .store-actions {
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
    }
    
    .map-link,
    .directions-link {
      display: inline-block;
      background-color: #2c5aa0;
      color: white;
      padding: 8px 16px;
      text-decoration: none;
      border-radius: 4px;
      font-size: 0.9em;
      transition: background-color 0.3s ease;
    }
    
    .directions-link {
      background-color: #28a745;
    }
    
    .map-link:hover,
    .directions-link:hover {
      opacity: 0.8;
    }
    
    @media (max-width: 768px) {
      .store-actions {
        flex-direction: column;
      }
      
      .map-link,
      .directions-link {
        text-align: center;
      }
    }
  </style>

{% else %}
  <div class="store-locator-simple">
    <p>No store locations available at the moment.</p>
  </div>
{% endif %}
